@model BulkyBook.Models.ViewModels.ProductViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form method="post" asp-action="Upsert" enctype="multipart/form-data">
    <div class="border p-3 mt-4 row">
        <div class="row pb-2">
            <h2 class="text-primary">@(Model.Product.Id!=0?"Update":"Create") Product</h2>
            <hr />
        </div>
        @* <div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for=Product.Title></label>
            <input asp-for=Product.Title class="form-control">
            <span asp-validation-for="Product.Title" class="text-bg-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for=Product.Description></label>
            <textarea asp-for=Product.Description rows="3" class="form-control"></textarea>
            <span asp-validation-for="Product.Description" class="text-bg-danger"></span>
        </div>
        <div class="mb-3 col-6">
            <label asp-for=Product.ISBN></label>
            <input asp-for=Product.ISBN class="form-control">
            <span asp-validation-for="Product.ISBN" class="text-bg-danger"></span>
        </div>
        <div class="mb-3 col-6">
            <label asp-for=Product.Author></label>
            <input asp-for=Product.Author class="form-control">
            <span asp-validation-for="Product.Author" class="text-bg-danger"></span>
        </div>
        <div class="mb-3 col-6">
            <label asp-for=Product.ListPrice></label>
            <input asp-for=Product.ListPrice class="form-control">
            <span asp-validation-for="Product.ListPrice" class="text-bg-danger"></span>
        </div>
        <div class="mb-3 col-6">
            <label asp-for=Product.Price></label>
            <input asp-for=Product.Price class="form-control">
            <span asp-validation-for="Product.Price" class="text-bg-danger"></span>
        </div>
        <div class="mb-3 col-6">
            <label asp-for=Product.ListPrice50></label>
            <input asp-for=Product.ListPrice50 class="form-control">
            <span asp-validation-for="Product.ListPrice50" class="text-bg-danger"></span>
        </div>
        <div class="mb-3 col-6">
            <label asp-for=Product.ListPrice100></label>
            <input asp-for=Product.ListPrice100 class="form-control">
            <span asp-validation-for="Product.ListPrice100" class="text-bg-danger"></span>
        </div> <div class="mb-3">
            <label asp-for=Product.ImageUrl></label>
            <input type="file" id="UploadBox" asp-for=Product.ImageUrl name="file" class="form-control">
        </div>
        <div class="mb-3 col-6">
            <label asp-for=Product.CategoryId></label>
            <select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="foem-select">
                <option disabled selected>--Select Category--</option>
            </select>
            <span asp-validation-for="Product.CategoryId" class="text-bg-danger"></span>
        </div>
        <div class="mb-3 col-6">
            <label asp-for=Product.CoverTypeId></label>
            <select asp-for="Product.CoverTypeId" asp-items="@Model.CoverTypeList" class="foem-select">
                <option disabled selected>--Select Cover Type--</option>
            </select>
            <span asp-validation-for="Product.CoverTypeId" class="text-bg-danger"></span>
        </div>
        <div class="col-12">
            @if(Model.Product.Id!=0)
            {
                <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
            }
            else
            {
                <button type="submit" onclick="return ValidateInput()" class="btn btn-primary" style="width:150px">Create</button>
            }
            
            <a asp-controller="Product" asp-action="Index" class="btn btn-secondary" style="width:150px">
                Back To List
            </a>
        </div>
    </div>

</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial.cshtml" />
    }
    <script>
        function ValidateInput() {
            if (document.getElementById("UploadBox").value == "") {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Please upload an Image',
                    
                })
            }

        }
    </script>
}

